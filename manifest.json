{
	"manifest_version": 2,

	"name": "exchange-bot",
	"description": "The order bot for NCTU virtial exchange.",
	"version": "0.1",
	"icons": {"128": "img/icon.png"},

	"permissions": [
		"cookies",
		"notifications",
		"storage",
		"*://nctu.vexch.game.tw/*",
		"*://*.yahoo.com/*"
	],
	"browser_action": {
		"default_icon": "img/icon.png"
		//"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["bg.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://nctu.vexch.game.tw/GVE3/index"],
			"run_at": "document_start",
			"all_frames": true,
			"js": ["jquery.min.js",
				"./js/jquery-ui/ui/jquery-ui.js",
				"./js/PutOrder.js",
				"content.js"],
			"css": ["reset.css",
				"content.css"]
		}
	],
	"web_accessible_resources": [
		"img/*",
		"html/*",
		"js/*",
		"jquery.min.map"
     ]
}
