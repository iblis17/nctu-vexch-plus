{
	"manifest_version": 2,

	"name": "exchange-bot",
	"description": "The order bot for NCTU virtial exchange.",
	"version": "0.1",
	"icons": {"128": "img/icon.png"},

	"permissions": [
		"cookies",
		"*://nctu.vexch.game.tw/*"
	],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://nctu.vexch.game.tw/GVE3/*"],
			"js": ["jquery.min.js", "jquery.cookie.js", "content.js"]
		}
	],
	"web_accessible_resources": [
		"img/*"
     ]
}
